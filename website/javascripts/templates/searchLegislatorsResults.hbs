<table class="table table-striped table-bordered table-condensed">
    <tbody>
    {{#each legislators}}
    <tr data-id="{{getId}}" class="clickable">
        <td class="title">{{{getTitleAbbr}}}</td>
        <td class="name">{{getLastName}} {{getFirstName}}</td>
        <td class="political-parties"><span class="centered-contents">{{{getPoliticalPartiesAbbr}}}</span></td>
        <td class="district">{{getUsStateId this}} {{{getChamber}}} {{getDistrict}}</td>
        <td class="support-level">{{{getCurrentSupportLevelSpan this}}}({{getReportCount this}})</td>
        <td class="mpp">{{{getSpanForYesNoAnswer "MPP" this}}}</td>
        <td class="safi">{{{getSpanForYesNoAnswer "SAFI" this}}}</td>
        <td class="ocu">{{{getSpanForYesNoAnswer "OCU" this}}}</td>
        <td class="pvc">{{{getSpanForYesNoAnswer "PVC" this}}}</td>
        <td class="latest-contact">{{getLatestContact this}}</td>
        <td class="is-missing-urgent-report"><input type="checkbox" {{#if isMissingUrgentReport}} checked {{/if}} /></td>
        <td class="is-a-priority-target"><input type="checkbox" {{#if isAPriorityTarget}} checked {{/if}} /></td>
    </tr>
    {{/each}}
    </tbody>
</table>
