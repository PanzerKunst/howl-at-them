<table class="table table-striped table-bordered table-condensed">
    <tbody>
    {{#each legislators}}
    <tr data-id="{{getId}}" class="clickable">
        <td class="title">{{{getTitleAbbr}}}</td>
        <td class="name">{{getLastName}} {{getFirstName}}</td>
        <td class="political-parties"><span class="centered-contents">{{{getPoliticalPartiesAbbr}}}</span></td>
        <td class="district">{{#with getUsState}}{{id}}{{/with}} {{{getChamber}}} {{getDistrict}}</td>
        <td class="support-level">{{{getCurrentSupportLevelSpan}}}({{getReportCount}})</td>
        <td class="mpp">{{{getSpanForYesNoAnswerLegislatorLevel "MPP" this}}}</td>
        <td class="safi">{{{getSpanForYesNoAnswerLegislatorLevel "SAFI" this}}}</td>
        <td class="ocu">{{{getSpanForYesNoAnswerLegislatorLevel "OCU" this}}}</td>
        <td class="pvc">{{{getSpanForYesNoAnswerLegislatorLevel "PVC" this}}}</td>
        <td class="latest-contact">{{getLatestContact}}</td>
        <td class="is-missing-urgent-report"><input type="checkbox" {{#if isMissingUrgentReport}} checked {{/if}} /></td>
        <td class="is-a-priority-target"><input type="checkbox" {{#if isAPriorityTarget}} checked {{/if}} /></td>
    </tr>
    {{/each}}
    </tbody>
</table>
